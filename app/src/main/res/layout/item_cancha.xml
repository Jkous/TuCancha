<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="12dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="8dp">


            <ImageView
                android:id="@+id/ivCancha"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:layout_weight="5"
                android:src="@drawable/cancha_3"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:orientation="vertical"
                android:layout_marginLeft="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvNombre"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_baseline_sports_soccer_24"
                        android:drawableTint="@color/primary"
                        android:textSize="16sp"
                        android:text="Cancha"/>

                    <TextView
                        android:id="@+id/tvLikes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginRight="4dp"
                        android:layout_marginLeft="4dp"
                        android:text="0"/>

                    <ToggleButton
                        android:id="@+id/likes"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/like_checkbox"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:textOff=""
                        android:textOn="" />

                </LinearLayout>


                <TextView
                    android:id="@+id/tvDireccion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_baseline_location_on_24"
                    android:layout_marginTop="4dp"
                    android:textSize="14sp"
                    android:text="DirecciÃ³n de la cancha"/>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal|bottom"
                    android:orientation="horizontal">

                    <ToggleButton
                        android:id="@+id/dia_l"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:textSize="12sp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/dia_checkbox"
                        android:clickable="false"
                        android:gravity="center"
                        android:text="M"
                        android:textColor="@color/white"
                        android:textOff="L"
                        android:textOn="L" />


                    <ToggleButton
                        android:id="@+id/dia_ma"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:textSize="12sp"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/dia_checkbox"
                        android:clickable="false"
                        android:gravity="center"
                        android:text="M"
                        android:textColor="@color/white"
                        android:textOff="M"
                        android:textOn="M" />


                    <ToggleButton
                        android:id="@+id/dia_mi"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:textSize="12sp"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/dia_checkbox"
                        android:clickable="false"
                        android:gravity="center"
                        android:text="M"
                        android:textColor="@color/white"
                        android:textOff="M"
                        android:textOn="M" />


                    <ToggleButton
                        android:id="@+id/dia_j"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:textSize="12sp"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/dia_checkbox"
                        android:clickable="false"
                        android:gravity="center"
                        android:text="M"
                        android:textColor="@color/white"
                        android:textOff="J"
                        android:textOn="J" />


                    <ToggleButton
                        android:id="@+id/dia_v"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:textSize="12sp"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/dia_checkbox"
                        android:clickable="false"
                        android:gravity="center"
                        android:text="M"
                        android:textColor="@color/white"
                        android:textOff="V"
                        android:textOn="V" />


                    <ToggleButton
                        android:id="@+id/dia_s"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:textSize="12sp"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/dia_checkbox"
                        android:clickable="false"
                        android:gravity="center"
                        android:text="M"
                        android:textColor="@color/white"
                        android:textOff="S"
                        android:textOn="S" />


                    <ToggleButton
                        android:id="@+id/dia_d"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:textSize="12sp"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/dia_checkbox"
                        android:clickable="false"
                        android:gravity="center"
                        android:text="M"
                        android:textColor="@color/white"
                        android:textOff="D"
                        android:textOn="D" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>




</LinearLayout>